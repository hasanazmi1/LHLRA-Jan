
@{
    Layout = null;
}
<!DOCTYPE html>

<html>

<head>


    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: {
                "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"]
            },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <!--end::Web font -->
    <!--begin::Base Styles -->
    <link href="~/assets/css/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Base Styles -->
    <link rel="shortcut icon" href="~/assets/img/favicon.ico" />


    <link href="~/assets/css/custom.css" rel="stylesheet" type="text/css" />
    <style>
        form{
            position:relative;
            height:100%
        }
        .m-login__forget-password {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    width: 430px;
        height: 500px;
}
        .form-control, .form-control[readonly] {
    border-color: #ebedf2;
    color: #575962;
    border-radius: 40px;
    border: none;
    padding: 1.5rem 1.5rem;
    margin-top: 1.5rem;
    background: #e7e6e8;
}
        .m-login__desc {
    color: #9e97aa;
}
        a#Backbutton {
    color: white!important;
    background: #9816f4;
    padding: .75rem 2rem;
    font-size: 1rem;
    font-weight: 400;
    font-family: Poppins;
    border-radius: 60px;
 display: block;
    text-align: center;
    width: 115px;
    
    text-decoration: none;
    transition:0.4s;
}
        button#m_login_forget_password_submit {
    width: 115px;
}

            a#Backbutton:hover {
                box-shadow: 0 5px 10px 2px rgba(152,22,244,.36) !important;
                background-color: #840ad9;
            }
    </style>
</head>


<body>

    @using (Html.BeginForm("ForgotPasswordRecovery", "Login", FormMethod.Post))

    {
      
                    <div class="m-login__forget-password ">
                        <div class="m-login__logo">
                            <a href="#">
                                <img src="/assets/img/logo.png">
                            </a>
                        </div>
                        <div class="m-login__head mt-5">
                            <h3 class="m-login__title">
                                Forgotten Password ?
                            </h3>
                            <div class="m-login__desc mb-5">
                                Enter your email to reset your password:
                            </div>
                        </div>
                        <form class="m-login__form m-form" action="">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input mb-5" type="text" placeholder="Email" name="m_email" id="m_email" autocomplete="off">
                            </div>
                            <div class="row m-login__form-action">
                                <div class="col-md-6 text-right">
                                    <button id="m_login_forget_password_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">
                                        Request
                                    </button>

                                    <span id="Error" style="width:100%; color:red; display: block; margin-top: 20px;">@TempData["ErrorForgot"]</span>

                                    &nbsp;&nbsp;
                                    @*<button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn">
                Cancel
            </button>*@
                                </div>
                                <div class="col-md-6 ">
                                    <a href="~/Login/Index" name="Back" id="Backbutton" style="color:darkslateblue">Back</a>

                                    </div>
                                
                                </div>
                        </form>
                    </div>
               

    }
                    <script src="~/assets/js/vendors.bundle.js" type="text/javascript"></script>
                    <script src="~/assets/js/scripts.bundle.js" type="text/javascript"></script>
                    <script>

                        $(document).on('click', '#m_login_forget_password_submit', function () {
                            debugger;
                            //var id = $(this).attr('_id');
                            $.post('@Url.Action("ForgotPasswordRecovery", "Login")', { Email: $('#m_email') }, function (data) {



                            });

                        });
                        $(document).on('click', '#m_login_forget_password_cancel', function () {
                            debugger;
                            window.location = "Index";

                        });


                    </script>
    </body>

</html>


