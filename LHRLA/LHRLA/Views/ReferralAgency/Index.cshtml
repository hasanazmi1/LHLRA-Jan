<script type="text/javascript">
    $(document).ready(function () {
        /////  validation for form FormReferral ////
        $('#btnCancel').on('click', function () {
          //  var form = $("#FormReferral");
        //    form.validate().resetForm();

        });
        $(function () {
            debugger
            $("form[name='Referral']").validate({
                rules: {
                    Name: {
                        required: true

                    },
                    Contact_Details: {
                        required: true,
                    },
                    Address: {
                        required: true,
                    },
                    Description: {
                        required: true,
                    }
                },
                messages: {
                    Name: "*",
                    Contact_Details: "*",
                    Address: "*",
                    Description: "*",

                },
                errorClass: "invalid",
                submitHandler: function (form) {
                    form.submit();
                }
            });
        });
    });

        $(document).on('click', '#btnSave', function (e) {
            debugger
            var Is_Active = true;
            if ($('#chkIsActive').is(":checked")) {
                Is_Active = true;
            }
            else {
                Is_Active = false;
            }
            var Id = '0';
            Id = $(this).attr('_id');
            var Name = $('#Name').val();
            var Contact_Details = $('#Contact_Details').val();
            var Address = $('#Address').val();
            var Description = $('#Description').val();

            

            var url = '@Url.Action("AddUpdateReferralAgency", "ReferralAgency")';



            //ShowLoader();
            if ($("#FormReferral").valid()) {
                e.preventDefault();
                ajaxCall(url, {
                    ID: Id,
                    Name: Name,
                    Contact_Details: Contact_Details,
                    Address: Address,
                    Description: Description,
                    Is_Active: Is_Active
                }, function (resp) {
                    // HideLoader();
                    if (typeof (resp) === 'object') {
                        if (resp.IsSuccess) {
                            $('#Name').val('');
                            $('#Contact_Details').val('');
                            $('#Address').val('');
                            $('#Description').val('');
                            $("#btnSave").attr('_id', 0);
                            alert(resp.ErrorMessage);
                            // location.reload();
                        }
                        else {
                            alert("Duplicate Name is not allowed")
                           // alert(resp.ErrorMessage);
                        }
                    }
                }, function (fail) {
                    console.log(fail.responseText);
                    if (fail.responseText.indexOf("IsSuccess") >= 0) {
                        alert(fail.responseJSON.ErrorMessage);
                    }
                    else {
                        alert(genericMessage);
                    }
                    // HideLoader();
                }, function (err) {
                    console.log(err.responseText);
                    if (err.responseText.indexOf("IsSuccess") >= 0) {
                        alert(err.responseJSON.ErrorMessage);
                    }
                    else {
                        alert(genericMessage);
                    }
                    // HideLoader();
                });
            }
        });



</script>
}

