<script type="text/javascript">
    $(document).ready(function () {
        /////  validation for form FormTags ////
        $('#btnCancel').on('click', function () {
           // var form = $("#FormTags");
          //  form.validate().resetForm();

        });
        $(function () {
            debugger
            $("form[name='Tags']").validate({
                rules: {
                    Tag_Value: {
                        required: true

                    },
                    Tag_Description: {
                        required: true,
                    }
                },
                messages: {
                    Tag_Value: "*",
                    Tag_Description: "*",

                },
                errorClass: "invalid",
                submitHandler: function (form) {
                    form.submit();
                }
            });
        });
    });

        $(document).on('click', '#btnSave', function (e) {
            debugger
            var Is_Active = true;
            if ($('#chkIsActive').is(":checked")) {
                Is_Active = true;
            }
            else {
                Is_Active = false;
            }
            var Id = '0';
            Id = $(this).attr('_id');
            var Tag_Value = $('#Value').val();
            var Tag_Description = $('#Description').val();
          

                var url = '@Url.Action("AddUpdateCaseTags", "CaseTags")';


            if ($("#FormTags").valid()) {
                e.preventDefault();
                //ShowLoader();
                ajaxCall(url, {
                    ID: Id,
                    Tag_Value: Tag_Value,
                    Tag_Description: Tag_Description,
                    Is_Active: Is_Active
                }, function (resp) {
                    // HideLoader();
                    if (typeof (resp) === 'object') {
                        if (resp.IsSuccess) {
                            $('#Value').val('');
                            $('#Description').val('');
                            $('#Is_Active').val('');
                            $("#btnSave").attr('_id', 0);
                            alert(resp.ErrorMessage);
                            //location.reload();
                        }
                        else {
                            alert('Duplicate Tag Value are not allowed')

                           // alert(resp.ErrorMessage);
                        }
                    }
                }, function (fail) {
                    console.log(fail.responseText);
                    if (fail.responseText.indexOf("IsSuccess") >= 0) {
                        alert(fail.responseJSON.ErrorMessage);
                    }
                    else {
                        alert(genericMessage);
                    }
                    // HideLoader();
                }, function (err) {
                    console.log(err.responseText);
                    if (err.responseText.indexOf("IsSuccess") >= 0) {
                        alert(err.responseJSON.ErrorMessage);
                    }
                    else {
                        alert(genericMessage);
                    }
                    // HideLoader();
                });
            }
        });



</script>
}

